            <% for (let i = 1; i <= 5; i++) {%>
            <input
              type="radio"
              id="nmrq-2-<%= i%>"
              name="nmrq-2"
              value="<%= i %>"
            />
            <label for="nmrq-2-<%= i%>"><%= i%></label>
            <% } %>
          </div>
        </div>
        <div class="form-group">
          <label for="nmrq-3">
